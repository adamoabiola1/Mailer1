@model EmailEntity

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Send Email</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <div><h3>@ViewBag.Message</h3> </div>
        <form method="post" asp-action="SendEmail" enctype="multipart/form-data">
            <div class="col-12">
                <label>From Email</label>
                <input asp-for="FromEmailAddress" class="form-control" />
            </div>

            <div class="col-12">
                <label>To Email</label>
                <input asp-for="ToEmailAddress" class="form-control" />
            </div>

            <div class="col-12">
                <label>Subject</label>
                <input asp-for="Subject" class="form-control" />
            </div>

            <div class="col-12">
                <label>Message</label>
                <textarea asp-for="EmailBodyMessage" rows="5" cols="20" class="form-control"></textarea>
            </div>

            <div class="col-12">
                <label>Select File</label>
                <input type="file" name="PostedFile" asp-for="AttachmentURL" class="form-control" />
            </div>
            <br />
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary">Send Email</button>
                </div>
            </div>
        </form>

    </div>
</div>

